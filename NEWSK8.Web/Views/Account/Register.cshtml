@model NEWSK8.Web.Models.RegisterNewUserViewModel
@{
    ViewData["Title"] = "Register";
}

<h3 class="display-4"><i class="fa fa-optin-monster"></i>Welcome</h3>

<div class="col-md-6 offset-md-6">
    <form method="post">

        <div class="form-row">
            <div class=" form-group col-md-6">
                <i class="fa fa-user"></i><label asp-for=" FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="First Name">
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <div class=" form-group col-md-6">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="Last Name">
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>
        </div>

        <div class="form-group">
            <i class="fa fa-at"></i><label asp-for=" UserName" class="control-label"></label>
            <input asp-for="UserName" class="form-control" placeholder="user@mail.com">
            <span asp-validation-for="UserName" class="text-warning"></span>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <i class="fa fa-skull"></i><label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <i class="fa fa-phone"></i><label asp-for=" PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone">
                <span asp-validation-for="PhoneNumber" class="text-warning"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <i class="fa fa-unlock-alt"></i><label asp-for=" Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>

            <div class="form-group col-md-6">
                <i class="fa fa-unlock-alt"></i><label asp-for=" Confirm" class="control-label"></label>
                <input asp-for="Confirm" type="password" class="form-control" placeholder="Confirm Password">
                <span asp-validation-for="Confirm" class="text-warning"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Sign Up" class="btn btn-outline-dark btn-md "/>
        </div>
    </form>
</div>

<div class="text-success">
    <p>
        @ViewBag.Message
    </p>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

